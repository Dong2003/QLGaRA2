@model TestG.Models.KhachHang

<div class="modal fade" id="detail-@Model.IDKhachHang" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="color:aqua">Thông tin chi tiết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <!---->
                <form>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form11Example4">Tên khách hàng</label>
                                <input type="text" id="form11Example4" class="form-control" value="@Html.DisplayFor(modelItem => modelItem.TenKH)" readonly />
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form6Example2">Số điện thoại</label>
                                <input type="text" id="form6Example2" class="form-control" value=" @Html.DisplayFor(modelItem => modelItem.SDT)" readonly />
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form6Example2">Địa chỉ</label>
                                <input type="text" id="form6Example2" class="form-control" value=" @Html.DisplayFor(modelItem => modelItem.DiaChi)" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <label style="margin-right:30px" class="form-label" for="form11Example4">Ảnh</label>
                            <img src="~/Images/@Model.AnhKH" alt="@Model.TenKH" width="200px" />
                        </div>
                    </div>
                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>
